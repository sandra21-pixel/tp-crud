<!DOCTYPE html>
<html lang="es">
<%- include('partials/head', {title: 'Editando: ' + 'productEdit.id'}) %>
<body>
	<%- include('partials/headerNavbar') %>
	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando: <i><%= productEdit.name %></i></h2>
			</div>
		</div>
		<div class="col-12">
			<form action="/products/edit/<%= productEdit.id %>?_method=PUT" method="POST">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" value= "<%= productEdit.name %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" value="<%= productEdit.price %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" value="<%= productEdit.discount %>" class="form-input">
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option selected hidden>Elegí</option>
							<option value="in-sale" <%= productEdit.category === "in-sale" ? "selected" : null %>>En oferta</option>
							<option value="visited" <%= productEdit.category === "visited" ? "selected" : null %> >Últimos agregados</option>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%= productEdit.description %></textarea>
					</div>
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>

	</div>
	
	<%- include('partials/footer') %>
	
</body>	
</html>